{
  "name": "automation_modules",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build": "npx tsc --build",
    "dev": "npm-run-all --parallel dev:auth dev:user",
    "dev:auth": "npm --workspace services/auth-service run dev",
    "dev:user": "npm --workspace services/user-service run dev",
    "test": "jest",
    "lint": "eslint \"**/*.ts\" --ignore-path .gitignore",
    "lint:fix": "eslint \"**/*.ts\" --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "devDependencies": {
    "@types/amqplib": "0.10.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2"
  },
  "workspaces": [
    "services/auth-service",
    "services/user-service",
    "services/chat-service"
  ],
  "dependencies": {
    "amqplib": "^0.10.5"
  }
}
